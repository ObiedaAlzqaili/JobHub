@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero">
    <div class="container hero-content">
        <div class="hero-text">
            <h1>Find Your Perfect Job Match with AI</h1>
            <p>JobHub helps you discover career opportunities that match your skills and experience. Search jobs directly or upload your CV for personalized AI recommendations.</p>
            <a href="#" class="btn btn-primary">Get Started For Free</a>

            <div class="job-stats">
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <div class="stat-text">
                        <h3>18,450</h3>
                        <p>Open Positions</p>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="stat-text">
                        <h3>3,210</h3>
                        <p>Companies Hiring</p>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <div class="stat-text">
                        <h3>120,000+</h3>
                        <p>Job Seekers</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-image floating">
            <img src="https://images.unsplash.com/photo-1551836022-d5d88e9218df?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" alt="Job seekers finding opportunities">
        </div>
    </div>
</section>

<!-- Search Section -->
<section class="search-section">
    <div class="container">
        <div class="search-container">
            <h2>Find Your Dream Job</h2>
            <form class="search-form">
                <input type="text" class="search-input" placeholder="Job title, keywords, or company">
                <input type="text" class="search-input" placeholder="City or location">
                <button type="submit" class="btn btn-primary">Search Jobs</button>
            </form>

            <div class="upload-cv">
                <div class="optional-tag">OPTIONAL</div>
                <h3>Enhance Your Search with AI</h3>
                <div class="upload-btn">
                    <i class="fas fa-cloud-upload-alt"></i>
                    <span>Upload Your CV for Smart Matching</span>
                </div>
                <p class="upload-text">Get personalized job recommendations based on your skills and experience</p>

                <div class="ai-benefits">
                    <div class="ai-benefit">
                        <i class="fas fa-check-circle"></i>
                        <span>Get better matches</span>
                    </div>
                    <div class="ai-benefit">
                        <i class="fas fa-check-circle"></i>
                        <span>Save time searching</span>
                    </div>
                    <div class="ai-benefit">
                        <i class="fas fa-check-circle"></i>
                        <span>Discover hidden opportunities</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features">
    <div class="container">
        <div class="section-header">
            <h2>Why Job Seekers Love JobHub</h2>
            <p>AI-powered tools to accelerate your job search</p>
        </div>

        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-search"></i>
                </div>
                <h3>Smart Search</h3>
                <p>Find relevant jobs faster with our intelligent search algorithm that understands your needs.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-robot"></i>
                </div>
                <h3>CV Analysis</h3>
                <p>Get personalized job matches based on your skills and experience (optional).</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-bell"></i>
                </div>
                <h3>Instant Alerts</h3>
                <p>Get notified immediately when new jobs matching your criteria are posted.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-rocket"></i>
                </div>
                <h3>1-Click Apply</h3>
                <p>Apply to jobs with a single click using your JobHub profile.</p>
            </div>
        </div>
    </div>
</section>

<!-- How It Works -->
<section class="process">
    <div class="container">
        <div class="section-header">
            <h2>How It Works</h2>
            <p>Your path to the perfect job in 4 simple steps</p>
        </div>

        <div class="process-steps">
            <div class="step">
                <div class="step-number">1</div>
                <h3>Search or Upload</h3>
                <p>Search jobs directly or optionally upload your CV for AI matching</p>
            </div>

            <div class="step">
                <div class="step-number">2</div>
                <h3>Get Matches</h3>
                <p>Receive tailored job recommendations that fit your profile</p>
            </div>

            <div class="step">
                <div class="step-number">3</div>
                <h3>Apply Easily</h3>
                <p>Submit applications with one click using your profile</p>
            </div>

            <div class="step">
                <div class="step-number">4</div>
                <h3>Track & Succeed</h3>
                <p>Monitor your applications and get hired faster</p>
            </div>
        </div>
    </div>
</section>

<!-- Companies Section -->
<section class="companies">
    <div class="container">
        <div class="section-header">
            <h2>Trusted by Leading Companies</h2>
            <p>Join organizations that use our platform to find top talent</p>
        </div>

        <div class="companies-grid">
            <div class="company-logo">
                <i class="fab fa-google"></i>
            </div>
            <div class="company-logo">
                <i class="fab fa-microsoft"></i>
            </div>
            <div class="company-logo">
                <i class="fab fa-amazon"></i>
            </div>
            <div class="company-logo">
                <i class="fab fa-apple"></i>
            </div>
            <div class="company-logo">
                <i class="fab fa-spotify"></i>
            </div>
            <div class="company-logo">
                <i class="fab fa-adobe"></i>
            </div>
        </div>
    </div>
</section>

