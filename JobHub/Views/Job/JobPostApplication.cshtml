@model JobHub.DTOs.Job.JobApplicationDto

<div class="application-form">
    <h1>Apply for @Model.JobTitle in @Model.CompanyName</h1>

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="JobPostId" />

        <div class="form-group">
            <label asp-for="ApplicantName"></label>
            <input asp-for="ApplicantName" />
            <span asp-validation-for="ApplicantName"></span>
        </div>

        <div class="form-group">
            <label asp-for="ApplicantEmail"></label>
            <input asp-for="ApplicantEmail" />
            <span asp-validation-for="ApplicantEmail"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>

        <div class="form-group">
            <label>Resume (PDF/DOCX)</label>
            <input type="file" name="resumeFile" accept=".pdf,.doc,.docx" />
        </div>

        <button type="submit">Submit Application</button>
    </form>
</div>