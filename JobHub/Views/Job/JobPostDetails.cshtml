@model JobHub.Models.JobPost
<style>
    /* Base Styles */
    :root {
        --primary-color: #3498db;
        --primary-dark: #2980b9;
        --secondary-color: #2ecc71;
        --dark-color: #2c3e50;
        --light-color: #ecf0f1;
        --gray-color: #95a5a6;
        --light-gray: #e0e0e0;
        --danger-color: #e74c3c;
        --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    .job-details-page {
        padding: 40px 0;
        background-color: #f5f7fa;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .job-details-container {
        display: flex;
        gap: 30px;
    }

    /* Main Content */
    .job-main-content {
        flex: 1;
        background: white;
        border-radius: 8px;
        box-shadow: var(--box-shadow);
        padding: 30px;
    }

    .job-header {
        display: flex;
        gap: 20px;
        margin-bottom: 25px;
        padding-bottom: 25px;
        border-bottom: 1px solid var(--light-gray);
    }

    .company-logo {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: var(--light-color);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary-color);
        font-weight: bold;
        font-size: 1.8rem;
        flex-shrink: 0;
    }

        .company-logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

    .job-title-section h1 {
        font-size: 1.8rem;
        color: var(--dark-color);
        margin-bottom: 10px;
    }

    .company-info h3 {
        font-size: 1.2rem;
        color: var(--dark-color);
        margin-bottom: 8px;
    }

    .job-meta {
        display: flex;
        gap: 20px;
        color: var(--gray-color);
        font-size: 0.9rem;
    }

        .job-meta i {
            margin-right: 5px;
            color: var(--primary-color);
        }

    /* Job Actions */
    .job-actions {
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    .btn-apply {
        background-color: var(--primary-color);
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 5px;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
    }

        .btn-apply:hover {
            background-color: var(--primary-dark);
        }

    .btn-save-job, .btn-share {
        background-color: white;
        color: var(--dark-color);
        padding: 12px 20px;
        border: 1px solid var(--light-gray);
        border-radius: 5px;
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-save-job:hover, .btn-share:hover {
            background-color: var(--light-color);
        }

        .btn-save-job i {
            color: var(--gray-color);
        }

    /* Job Content Sections */
    .job-section {
        margin-bottom: 30px;
    }

        .job-section h2 {
            font-size: 1.4rem;
            color: var(--dark-color);
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid var(--light-gray);
        }

    .job-description {
        line-height: 1.7;
        color: #555;
    }

    .skills-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 15px;
    }

    .skill-tag {
        background-color: var(--light-color);
        color: var(--dark-color);
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
    }

    .company-description {
        line-height: 1.7;
        color: #555;
    }

    .company-stats {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--gray-color);
    }

        .stat-item i {
            color: var(--primary-color);
        }

    /* Sidebar */
    .job-sidebar {
        width: 350px;
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .sidebar-card {
        background: white;
        border-radius: 8px;
        box-shadow: var(--box-shadow);
        padding: 25px;
    }

        .sidebar-card h3 {
            font-size: 1.2rem;
            color: var(--dark-color);
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid var(--light-gray);
        }

    .overview-item {
        display: flex;
        gap: 15px;
        margin-bottom: 15px;
        align-items: center;
    }

        .overview-item i {
            color: var(--primary-color);
            font-size: 1.1rem;
            width: 24px;
            text-align: center;
        }

        .overview-item .label {
            display: block;
            font-size: 0.8rem;
            color: var(--gray-color);
        }

        .overview-item .value {
            font-weight: 500;
            color: var(--dark-color);
        }

    /* Quick Apply Form */
    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-size: 0.9rem;
            color: var(--dark-color);
        }

        .form-group input {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid var(--light-gray);
            border-radius: 5px;
            font-size: 0.9rem;
        }

    .file-upload {
        position: relative;
    }

        .file-upload input {
            position: absolute;
            opacity: 0;
            width: 0.1px;
            height: 0.1px;
        }

    .file-upload-label {
        display: block;
        width: 100%;
        padding: 10px 15px;
        border: 1px dashed var(--light-gray);
        border-radius: 5px;
        text-align: center;
        cursor: pointer;
        transition: var(--transition);
    }

        .file-upload-label:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
        }

        .file-upload-label i {
            margin-right: 8px;
        }

    .btn-submit-application {
        width: 100%;
        background-color: var(--secondary-color);
        color: white;
        padding: 12px;
        border: none;
        border-radius: 5px;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        margin-top: 10px;
    }

        .btn-submit-application:hover {
            background-color: #27ae60;
        }

    /* Similar Jobs */
    .similar-job {
        padding: 15px 0;
        border-bottom: 1px solid var(--light-gray);
    }

        .similar-job:last-child {
            border-bottom: none;
        }

        .similar-job h4 {
            font-size: 1rem;
            color: var(--dark-color);
            margin-bottom: 5px;
        }

        .similar-job .company {
            font-size: 0.9rem;
            color: var(--gray-color);
            margin-bottom: 8px;
        }

        .similar-job .job-meta {
            font-size: 0.8rem;
            gap: 15px;
        }

    .view-all-jobs {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: var(--primary-color);
        font-weight: 500;
        text-decoration: none;
    }

    /* Responsive Design */
    media (max-width: 992px) {
        .job-details-container

    {
        flex-direction: column;
    }

    .job-sidebar {
        width: 100%;
    }

    }

    media (max-width: 768px) {
        .job-header

    {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .job-meta {
        justify-content: center;
    }

    .job-actions {
        justify-content: center;
    }

    .company-stats {
        justify-content: center;
    }

    }

    media (max-width: 576px) {
        .job-main-content

    {
        padding: 20px;
    }

    .job-title-section h1 {
        font-size: 1.5rem;
    }

    .job-meta {
        flex-direction: column;
        gap: 8px;
    }

    .job-actions {
        flex-direction: column;
    }

    .btn-apply, .btn-save-job, .btn-share {
        width: 100%;
        justify-content: center;
    }

    }
</style>
<div class="job-details-page">
    <div class="container">
        <div class="job-details-container">
            <!-- Main Job Content -->
            <div class="job-main-content">
                <div class="job-header">
                    <div class="company-logo">
                        @if (!string.IsNullOrEmpty(Model.ImageCompanyBase64))
                        {
                            <img src="data:@Model.ImageCompanyType;base64,@Model.ImageCompanyBase64" alt="@Model.companyName logo">
                        }
                        else
                        {
                            <span>@Model.companyName?.Substring(0, 1)</span>
                        }
                    </div>
                    <div class="job-title-section">
                        <h1>@Model.Title</h1>
                        <div class="company-info">
                            <h3>@Model.companyName</h3>
                            <div class="job-meta">
                                <span class="location"><i class="fas fa-map-marker-alt"></i> @Model.Location</span>
                                <span class="posted-date"><i class="fas fa-calendar-alt"></i> Posted @Model.PostedAt.ToShortDateString()</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="job-actions">
                    @* <button class="btn-apply">Apply Now</button>
                    <button class="btn-save-job">
                        <i class="far fa-bookmark"></i> Save Job
                    </button> *@
                    <button class="btn-share">
                        <i class="fas fa-share-alt"></i> Share
                    </button>
                </div>

                <div class="job-content">
                    <div class="job-section">
                        <h2>Job Description</h2>
                        <div class="job-description">
                            @Html.Raw(Model.Description.Replace("\n", "<br>"))
                        </div>
                    </div>

                    <div class="job-section">
                        <h2>Required Skills</h2>
                        <div class="skills-container">
                            @foreach (var skill in Model.RequiredSkills.Split(','))
                            {
                                <span class="skill-tag">@skill.Trim()</span>
                            }
                        </div>
                    </div>

                    <div class="job-section">
                        <h2>About @Model.companyName</h2>
                        <div class="company-description">
                            <!-- You would replace this with actual company description from your model -->
                            <p>@Model.Company?.Description ?? "A leading company in its industry with a strong commitment to innovation and employee growth."</p>
                            @* <div class="company-stats">
                                <div class="stat-item">
                                    <i class="fas fa-users"></i>
                                    <span>@(Model.Company?.Size ?? "50+") employees</span>
                                </div>
                                <div class="stat-item">
                                    <i class="fas fa-globe"></i>
                                    <span>@(Model.Company?.Website ?? "company.com")</span>
                                </div>
                                <div class="stat-item">
                                    <i class="fas fa-industry"></i>
                                    <span>@(Model.Company?.Industry ?? "Technology")</span>
                                </div>
                            </div> *@
                        </div>
                    </div>
                </div>
            </div>

            <!-- Job Sidebar -->
            <div class="job-sidebar">
                <div class="sidebar-card">
                    <h3>Job Overview</h3>
                    <div class="overview-item">
                        <i class="fas fa-briefcase"></i>
                        <div>
                            <span class="label">Job Type</span>
                            <span class="value">Full-time</span>
                        </div>
                    </div>
                    <div class="overview-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <span class="label">Location</span>
                            <span class="value">@Model.Location</span>
                        </div>
                    </div>
                    <div class="overview-item">
                        <i class="fas fa-calendar-alt"></i>
                        <div>
                            <span class="label">Posted Date</span>
                            <span class="value">@Model.PostedAt.ToShortDateString()</span>
                        </div>
                    </div>
                    <div class="overview-item">
                        <i class="fas fa-money-bill-wave"></i>
                        <div>
                            <span class="label">Salary</span>
                            <span class="value">Competitive</span>
                        </div>
                    </div>
                </div>

                <div class="sidebar-card">
                    <h3>Quick Apply</h3>
                    <form class="quick-apply-form" asp-action="JobPostApplication" asp-controller="Job" method="post" enctype="multipart/form-data">
                        <input name="companyId" value="@Model.Id" />
                        <div class="form-group">
                            <label for="full-name">Full Name</label>
                            <input type="text" id="full-name" name="FullName" placeholder="Your full name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="Email" placeholder="Your email address">
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            <input type="tel" id="phone" name="Phone" placeholder="Your phone number">
                        </div>
                        <div class="form-group">
                            <label for="resume">Upload Resume</label>
                            <div class="file-upload">
                                <input type="file" id="resume" name="Resume">
                                <label for="resume" class="file-upload-label">
                                    <i class="fas fa-cloud-upload-alt"></i> Choose File
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn-submit-application">Submit Application</button>
                    </form>
                </div>

                <div class="sidebar-card similar-jobs">
                    <h3>Similar Jobs</h3>
                    <div class="similar-job">
                        <h4>Senior Software Engineer</h4>
                        <p class="company">Tech Solutions Inc.</p>
                        <div class="job-meta">
                            <span><i class="fas fa-map-marker-alt"></i> @Model.Location</span>
                            <span><i class="fas fa-clock"></i> Full-time</span>
                        </div>
                    </div>
                    <div class="similar-job">
                        <h4>Backend Developer</h4>
                        <p class="company">Data Systems Co.</p>
                        <div class="job-meta">
                            <span><i class="fas fa-map-marker-alt"></i> @Model.Location</span>
                            <span><i class="fas fa-clock"></i> Contract</span>
                        </div>
                    </div>
                    <a href="#" class="view-all-jobs">View all similar jobs →</a>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Save job functionality
        const saveJobBtn = document.querySelector('.btn-save-job');
        saveJobBtn.addEventListener('click', function() {
            this.classList.toggle('saved');
            const icon = this.querySelector('i');
            if (this.classList.contains('saved')) {
                icon.classList.remove('far', 'fa-bookmark');
                icon.classList.add('fas', 'fa-bookmark');
                icon.style.color = 'var(--danger-color)';
                this.innerHTML = '<i class="fas fa-bookmark"></i> Saved';
            } else {
                icon.classList.remove('fas', 'fa-bookmark');
                icon.classList.add('far', 'fa-bookmark');
                icon.style.color = '';
                this.innerHTML = '<i class="far fa-bookmark"></i> Save Job';
            }
        });

        // Share job functionality
        const shareBtn = document.querySelector('.btn-share');
        shareBtn.addEventListener('click', function() {
            if (navigator.share) {
                navigator.share({
                    title: '@Model.Title',
                    text: 'Check out this job opportunity at @Model.companyName',
                    url: window.location.href
                }).catch(err => {
                    console.log('Error sharing:', err);
                });
            } else {
                // Fallback for browsers that don't support Web Share API
                const shareUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent('Check out this job: ' + '@Model.Title at @Model.companyName')}&url=${encodeURIComponent(window.location.href)}`;
                window.open(shareUrl, '_blank');
            }
        });
    });
</script>