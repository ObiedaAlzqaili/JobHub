@model JobHub.DTOs.company.ApplicationDto

<div class="modal fade" id="applicantsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Applicants for @Model.JobTitle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @if (!Model.Applicants.Any())
                {
                    <div class="alert alert-info">No applicants yet</div>
                }
                else
                {
                    foreach (var applicant in Model.Applicants)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@applicant.EndUser.FullName</h5>
                                <p><i class="fas fa-envelope"></i> @applicant.Email</p>
                                <!-- Other applicant info -->
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>