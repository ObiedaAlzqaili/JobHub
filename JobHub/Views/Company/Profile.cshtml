@model JobHub.Models.Company
@{
    ViewData["Title"] = "Company Profile";
    Layout = "/Views/Shared/_CompanyLayout.cshtml";
}

<div class="company-profile-container">
    <div class="company-header bg-primary text-white p-4 rounded-top-3">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
            <div class="d-flex align-items-center mb-3 mb-md-0">
                <i class="fas fa-building fa-2x me-3"></i>
                <h1 class="h2 mb-0">@Model.CompanyName</h1>
            </div>
        </div>
    </div>

    <div class="company-body bg-white p-4 rounded-bottom-3 shadow-sm">
        <div class="row g-4">
            <div class="col-lg-4">
                @if (!string.IsNullOrEmpty(Model.PersonalImageBase64))
                {
                    <div class="company-logo-container bg-light p-3 rounded-3 text-center mb-4">
                        <img src="data:@Model.PersonalImageType;base64,@Model.PersonalImageBase64"
                             class="img-fluid company-logo rounded-3 border"
                             alt="@Model.CompanyName Logo">
                    </div>
                }
            </div>

            <div class="col-lg-8">
                <div class="company-details">
                    <div class="card mb-4 border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h3 class="h5 mb-0 text-primary">
                                <i class="fas fa-info-circle me-2"></i>Company Information
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h4 class="h6 fw-bold text-muted">Description</h4>
                                <p class="mb-0">@Model.CompanyDescription</p>
                            </div>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h3 class="h5 mb-0 text-primary">
                                <i class="fas fa-address-card me-2"></i>Contact Information
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="me-3 text-primary">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <h4 class="h6 fw-bold text-muted mb-0">Contact Person</h4>
                                            <p class="mb-0">@Model.FullName</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="me-3 text-primary">
                                            <i class="fas fa-envelope"></i>
                                        </div>
                                        <div>
                                            <h4 class="h6 fw-bold text-muted mb-0">Email</h4>
                                            <p class="mb-0">@Model.Email</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="me-3 text-primary">
                                            <i class="fas fa-phone"></i>
                                        </div>
                                        <div>
                                            <h4 class="h6 fw-bold text-muted mb-0">Phone</h4>
                                            <p class="mb-0">@Model.PhoneNumber</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .company-profile-container {
        max-width: 1200px;
        margin: 2rem auto;
    }

    .company-logo-container {
        position: relative;
        min-height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .company-logo {
        max-height: 250px;
        max-width: 100%;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

        .company-logo:hover {
            transform: scale(1.03);
        }

    .company-header {
        margin-bottom: -1px;
        position: relative;
        z-index: 1;
    }

    .card {
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
        }

    media (max-width: 768px) {
        .company-header {
            padding: 1.5rem;
        }

        .company-body {
            padding: 1.5rem;
        }
    }
</style>