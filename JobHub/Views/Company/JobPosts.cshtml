@using Humanizer
@model List<JobHub.Models.JobPost>
@{
    ViewData["Title"] = "Job Posts";
    Layout = "/Views/Shared/_CompanyLayout.cshtml";
}

<div class="container py-4 py-lg-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="text-primary mb-2">
                <i class="fas fa-briefcase me-2"></i>Your Job Posts
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Job Posts</li>
                </ol>
            </nav>
        </div>
        <button class="btn btn-success btn-lg px-4" data-bs-toggle="modal" data-bs-target="#createJobModal">
            <i class="fas fa-plus me-2"></i>Create New Job
        </button>
    </div>

    <div class="job-posts-container">
        @if (!Model.Any())
        {
            <div class="empty-state text-center p-5 rounded-3 bg-light">
                <div class="empty-state-icon bg-primary bg-opacity-10 text-primary rounded-circle p-4 d-inline-flex mb-4">
                    <i class="fas fa-briefcase fa-3x"></i>
                </div>
                <h3 class="h4 mb-3">No Job Posts Yet</h3>
                <p class="text-muted mb-4">Get started by creating your first job posting to attract qualified candidates</p>
                <button class="btn btn-primary px-4" data-bs-toggle="modal" data-bs-target="#createJobModal">
                    <i class="fas fa-plus me-2"></i>Create Job Post
                </button>
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var job in Model)
                {
                    <div class="col">
                        <div class="job-card card h-100 shadow-sm border-0 overflow-hidden">
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h3 class="h5 card-title text-primary mb-0 flex-grow-1 pe-3">@job.Title</h3>
                                    <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill">
                                        @job.JobApplications.Count @(job.JobApplications.Count == 1 ? "Applicant" : "Applicants")
                                    </span>
                                </div>

                                <div class="mb-3">
                                    <span class="badge bg-light text-dark me-2 mb-2">
                                        <i class="fas fa-map-marker-alt text-muted me-1"></i> @job.Location
                                    </span>
                                    @* @if (!string.IsNullOrEmpty(job.JobType))
                                    {
                                        <span class="badge bg-light text-dark mb-2">
                                            <i class="fas fa-clock text-muted me-1"></i> @job.JobType
                                        </span>
                                    } *@
                                </div>

                                <p class="card-text text-muted mb-4 flex-grow-1">@job.Description.Truncate(150)</p>

                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <small class="text-muted">
                                        <i class="far fa-calendar-alt me-1"></i> @job.PostedAt.ToString("MMM dd, yyyy")
                                    </small>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" id="jobActionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="jobActionsDropdown">
                                            <li>
                                                <a class="dropdown-item view-applicants" href="#" data-id="@job.Id" data-bs-toggle="modal" data-bs-target="#applicantsModal">
                                                    <i class="fas fa-users me-2"></i>View Applicants
                                                </a>
                                            </li>
                                            <li><a class="dropdown-item" href="#"><i class="fas fa-edit me-2"></i>Edit</a></li>
                                            <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-trash-alt me-2"></i>Delete</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- Create Job Modal -->
<div class="modal fade" id="createJobModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-plus-circle me-2"></i>Create New Job Post</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                @await Html.PartialAsync("_CreateJobPost", new JobHub.DTOs.Job.JobPostDto())
            </div>
        </div>
    </div>
</div>

<!-- Applicants Modal -->
<div class="modal fade" id="applicantsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-users me-2"></i>Job Applicants</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0" id="applicantsModalBody">
                <!-- Content loaded via AJAX -->
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.view-applicants').click(function() {
                var jobPostId = $(this).data('id');
                $('#applicantsModalBody').html(`
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                `);
                $('#applicantsModalBody').load('@Url.Action("GetApplicants", "Company")?jobPostId=' + jobPostId);
            });
        });
    </script>
}

<style>
    .job-card {
        transition: all 0.3s ease;
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,0.05);
    }

        .job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.08);
            border-color: rgba(13,110,253,0.2);
        }

    .empty-state {
        max-width: 600px;
        margin: 0 auto;
    }

    .empty-state-icon {
        width: 80px;
        height: 80px;
    }

    .dropdown-toggle::after {
        margin-left: 0.5em;
        vertical-align: middle;
    }

    media (max-width: 767.98px) {
        .job-card {
            margin-bottom: 1.5rem;
        }
    }
</style>